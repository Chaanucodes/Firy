<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp">

    <RelativeLayout
        android:id="@+id/message_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/rect_round_primary_dark">
        <TextView
            android:id="@+id/textViewMessageItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:minWidth="120dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            tools:text="@string/experiment_text"/>

        <TextView
            android:id="@+id/textViewMessageTimeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewMessageItem"
            android:layout_alignEnd="@id/textViewMessageItem"
            android:textAppearance="?android:attr/textAppearanceSmall"
            tools:text="2/09/20 8:05 PM"/>
    </RelativeLayout>

</FrameLayout>